            $('#leftMenuUl .dropLeftMenu').click(function () {
                var selectCt = $(this).parent().find('ul.submenu').first();
                if (selectCt.is(':visible')) {
                    $(this).text("+");
                    selectCt.slideUp('normal');
                } else {
                    $(this).text("-");
                    selectCt.slideDown('normal');
                }
            });
        })
    });
