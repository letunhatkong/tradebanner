<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Mage_Adminhtml::admin">
                <resource id="Magento_Adminhtml::stores">
                    <resource id="Magento_Adminhtml::stores_settings">
                        <resource id="Magento_Adminhtml::config">
                            <resource id="J2t_Rewardpoints::config_rewardpoints" title="Reward Points Configuration" sortOrder="50"/>
                        </resource>
                    </resource>
                </resource>
                
                <resource id="Magento_Adminhtml::marketing" title="System">
                    <resource id="J2t_Rewardpoints::system_rewardpoints_settings" title="Reward Points"  sortOrder="30">
                        <resource id="J2t_Rewardpoints::system_rewardpoints_stats" title="Statistics"  sortOrder="10" />
                        <resource id="J2t_Rewardpoints::system_rewardpoints_points" title="Client Points"  sortOrder="20" />
                        <resource id="J2t_Rewardpoints::system_rewardpoints_referrals" title="Referrals"  sortOrder="30" />
                        <resource id="J2t_Rewardpoints::system_rewardpoints_catalog_rule" title="Catalog Point Rules"  sortOrder="40" />
                        <resource id="J2t_Rewardpoints::system_rewardpoints_cart_rule" title="Cart Point Rules"  sortOrder="50" />
                        <resource id="J2t_Rewardpoints::system_rewardpoints_configuration" title="Configuration"  sortOrder="60" />
                    </resource>
                </resource>
                
                
            </resource>
        </resources>
    </acl>
</config>
